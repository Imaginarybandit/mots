<%- include('../../partials/header') %>
    <link rel="stylesheet" href="/css/login.css">

    </head>

    <body>

        <%- include('../../partials/options') %>
            <%- include('../../partials/flash') %>
                <div>
                    <form action="/register" method="POST">

                        <label for="username">Username</label>
                        <input type="text" name="username" id="username" class="wordInputs d-block mx-auto mb-3"
                            required>
                        <br>

                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" class="wordInputs d-block mx-auto mb-3">
                        <br>

                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="wordInputs d-block mx-auto mb-5"
                            required>
                        <button class="btn searchButton mb-3">Submit</button>

                        <p>Already have an account? <a href="/login">log in</a></p>
                    </form>
                </div>

    </body>

    </html>